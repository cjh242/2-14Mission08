@model TaskList;

<h2>Add a New Task to the Time Management Matrix</h2>

<form method="post" class="container">
    <input type="hidden" asp-for="TaskId"/>

    <div class="row mb-3">
        <div class="col-md-2">
            <label asp-for="CategoryId" class="form-label">Category:</label>
        </div>
        <div class="col-md-10">
            <select asp-for="CategoryId" class="form-select">
                <option value="">Select a Category</option>
                @foreach (Category c in ViewBag.Categories)
                {
                    <option value="@c.CategoryId">@c.CategoryName</option>
                }
            </select>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-2">
            <label asp-for="Task" class="form-label">Task:</label>
        </div>
        <div class="col-md-10">
            <input asp-for="Task" name="task" class="form-control">
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-2">
            <label asp-for="DueDate" class="form-label">DueDate:</label>
        </div>
        <div class="col-md-10">
            <input asp-for="DueDate" class="form-control">
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-2">
            <label asp-for="Quadrant" class="form-label">Quadrant:</label>
        </div>
        <div class="col-md-10">
            <select asp-for="Quadrant" class="form-select">
                <option value="1">1 Important / Urgent</option>
                <option value="2">2 Important / Not Urgent</option>
                <option value="3">3 Not Important / Urgent</option>
                <option value="4">4 Not Important / Not Urgent</option>
            </select>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-2">
            <label asp-for="Completed" class="form-label">Completed:</label>
        </div>
        <div class="col-md-10">
            <div class="form-check">
                <input type="radio" asp-for="Completed" value="True" class="form-check-input">
                <label class="form-check-label" for="Completed">True</label>
            </div>
            <div class="form-check">
                <input type="radio" asp-for="Completed" value="False" class="form-check-input">
                <label class="form-check-label" for="Completed">False</label>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
</form>

